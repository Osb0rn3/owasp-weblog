<%- include('header', { title: 'Home' }) %>

    <!-- Hero Section -->
    <header class="hero">
        <div class="container">
            <h1>Welcome to My Blog</h1>
            <p>Your source for interesting articles and insights.</p>
        </div>
    </header>

    <!-- Blog Posts -->
    <section class="blog-posts">
        <div class="container">
            <div class="row">
                <%
                posts.forEach((post) => { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="/user_files/<%= post.cover %>" class="card-img-top" alt="Blog Post <%= post.id %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= post.title %></h5>
                                <p class="card-text"><%= post.content %></p>
                                <a href="/posts/<% post.id %>" class="btn btn-primary">Read More</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <%- include('footer') %>

    <!-- Add Bootstrap JS CDN link and jQuery CDN link before closing </body> tag -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>
</body>

</html>
